{
  "project": {
    "name": "test-mysql-app",
    "description": "LAMP stack with MySQL database",
    "region": "us-east-1",
    "owner": "tester"
  },
  "network": {
    "vpc_mode": "new",
    "vpc_cidr": "10.1.0.0/16",
    "subnet_type": "public",
    "rules": [
      { "port": 22, "protocol": "tcp", "cidr": "0.0.0.0/0", "description": "SSH" },
      { "port": 80, "protocol": "tcp", "cidr": "0.0.0.0/0", "description": "HTTP" },
      { "port": 443, "protocol": "tcp", "cidr": "0.0.0.0/0", "description": "HTTPS" },
      { "port": 3306, "protocol": "tcp", "cidr": "10.0.0.0/8", "description": "MySQL (private)" }
    ],
    "status": "pending"
  },
  "compute": {
    "instance_type": "t3.medium",
    "image_id": "amazon-linux-2023",
    "user_data": "#!/bin/bash\nyum update -y\nyum install -y httpd mysql php php-mysqlnd\nsystemctl enable httpd\nsystemctl start httpd\n",
    "status": "pending"
  },
  "data": {
    "db": {
      "engine": "mysql",
      "instance_class": "db.t3.small",
      "allocated_storage_gb": 50,
      "username": "admin",
      "status": "pending"
    },
    "s3_bucket": { "status": "skipped" }
  },
  "security": {
    "key_pair": {
      "mode": "generate",
      "name": "test-mysql-app-key",
      "status": "pending"
    },
    "iam_role": {
      "enabled": true,
      "role_name": "test-mysql-app-role",
      "status": "pending"
    }
  }
}
