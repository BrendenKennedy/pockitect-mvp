{
  "project": {
    "name": "test-mariadb-app",
    "description": "Application with MariaDB database",
    "region": "eu-central-1",
    "owner": "tester"
  },
  "network": {
    "vpc_mode": "default",
    "subnet_type": "public",
    "rules": [
      { "port": 22, "protocol": "tcp", "cidr": "0.0.0.0/0", "description": "SSH" },
      { "port": 80, "protocol": "tcp", "cidr": "0.0.0.0/0", "description": "HTTP" },
      { "port": 3306, "protocol": "tcp", "cidr": "10.0.0.0/8", "description": "MariaDB (private)" }
    ],
    "status": "pending"
  },
  "compute": {
    "instance_type": "t3.small",
    "image_id": "debian-12",
    "user_data": "#!/bin/bash\napt update && apt install -y mariadb-client nginx\n",
    "status": "pending"
  },
  "data": {
    "db": {
      "engine": "mariadb",
      "instance_class": "db.t3.micro",
      "allocated_storage_gb": 30,
      "username": "dbadmin",
      "status": "pending"
    },
    "s3_bucket": { "status": "skipped" }
  },
  "security": {
    "key_pair": {
      "mode": "generate",
      "name": "test-mariadb-app-key",
      "status": "pending"
    },
    "iam_role": {
      "enabled": true,
      "role_name": "test-mariadb-app-role",
      "status": "pending"
    }
  }
}
